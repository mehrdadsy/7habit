<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.mehrdadseyfi.a7habit">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="DATABASE"
            android:value="sugar3.db" />
        <meta-data
            android:name="VERSION"
            android:value="6" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="ir.mehrdadseyfi" />
        />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GoalActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".ChecklistActivity" />
        <activity android:name=".LongGoalActivity" />
        <activity android:name=".ShotGoalActivity" />
        <activity
            android:name=".Dialog"
            android:theme="@style/Theme.MyDialog" />
        <activity android:name=".BadHabitActivity"></activity>
        <activity
            android:name=".DialogBadHabitAddActivity"
            android:theme="@style/Theme.MyDialog" />
        <activity
            android:name=".DialogBadHabitShowActivity"
            android:theme="@style/Theme.MyDialog" />
        <activity android:name=".SquareTasksActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
    </application>

</manifest>