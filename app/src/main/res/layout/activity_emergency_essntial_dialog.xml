<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="ir.mehrdadseyfi.a7habit.Emegency.EmergencyEssntialDialogActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_task"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_title_EE"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_detial_EE"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calender"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/save"
            android:text="@string/dialog_save_btn"
            android:layout_width="60dp"
            android:layout_marginRight="20dp"
            android:layout_height="40dp" />


        <Button
            android:id="@+id/cancel"
            android:text="@string/dialog_cancel_btn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"/>


</LinearLayout>
</LinearLayout>