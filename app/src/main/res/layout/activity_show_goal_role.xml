<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:context="ir.mehrdadseyfi.a7habit.Vista.ShowGoalRoleActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:background="#ff8e66"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_role_name"/>
    <Button
        android:id="@+id/edit_role"
        android:text="@string/edit_role"
        android:layout_width="80dp"
        android:background="@drawable/d3_nee"
        android:layout_height="60dp"
        android:layout_gravity="center"/>

    <ListView
        android:id="@+id/mylist_rg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
