<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center"
    android:id="@+id/my_drawer_layout"
    tools:context="ir.mehrdadseyfi.a7habit.action.ScormPlayerActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <android.support.v7.widget.Toolbar
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:id="@+id/tool"
      android:background="@color/accent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tele"
        android:id="@+id/tele"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/insta"
        android:layout_height="wrap_content"
        android:src="@drawable/telegram" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cal"
        android:id="@+id/cal"/>
    </LinearLayout>
      <ImageView
          android:id="@+id/drawers"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/back"
          android:layout_alignParentRight="true"/>

    </RelativeLayout>
  </android.support.v7.widget.Toolbar>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="4"
      android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/today"/>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="fill_parent"
      android:background="#ffffff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ifemp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/mylist_to"></ListView></RelativeLayout>
    <ir.mirrajabi.persiancalendar.PersianCalendarView
        android:layout_width="0dp"
        android:id="@+id/persian_calendar_to"
        android:layout_height="0dp"
        android:layout_weight="4"
        app:pcv_colorBackground="#fffcfc"
        app:pcv_colorDayName="#bab6b6"
        app:pcv_colorHoliday="#ffd506"
        app:pcv_colorHolidaySelected="#1c1d1d"
        app:pcv_colorNormalDaySelected="#101010"
        app:pcv_colorNormalDay="#1d1d1d"
        app:pcv_eventUnderlineColor="#02f0f0"
        app:pcv_fontSize="30dp"
        app:pcv_headersFontSize="15dp"
        app:pcv_todayBackground="@color/bg_screen1" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1.3"
      android:layout_marginTop="10dp"
      android:gravity="center">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dream_ib"
        android:text="@string/dream"
        android:layout_marginRight="20dp"
        android:background="@drawable/d3_ee_white"
        android:drawableTop= "@drawable/dream"/>
  <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/role_ib"
      android:text="@string/role"
      android:background="@drawable/d3_ee_white"
      android:layout_marginRight="20dp"
      android:drawableTop="@drawable/role"/>
  <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goal_ib"
      android:background="@drawable/d3_ee_white"
      android:text="@string/goal"

      android:drawableTop= "@drawable/goal"/>


  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="10dp"
      android:layout_weight="1"
      android:gravity="center">
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/olaviyat"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/d3_ee"
        android:text="@string/olaviyat"

       />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp">
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/days_21"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/d3_ee"
        android:text="@string/days_21"

        />
  </LinearLayout>
</LinearLayout>
</RelativeLayout>
<RelativeLayout
android:layout_width="250dp"
android:layout_height="match_parent"
android:layout_gravity="right"
android:background="@color/primary_light">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:src="@drawable/icon"/>
   <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/o1"
      android:text="@string/today"
       android:background="@drawable/d3_ee_drawer"  />



</LinearLayout>



</RelativeLayout>
</android.support.v4.widget.DrawerLayout>
