<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_text"
    android:orientation="vertical"
    tools:context="ir.mehrdadseyfi.a7habit.action.ScormPlayerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tool"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar"
                android:background="@color/accent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tele"
                            android:layout_width="@dimen/toll_photo"
                            android:layout_height="@dimen/toll_photo"

                            android:layout_margin="5dp"
                            android:src="@drawable/tele" />

                        <ImageView
                            android:id="@+id/insta"
                            android:layout_width="@dimen/toll_photo"
                            android:layout_height="@dimen/toll_photo"

                            android:layout_margin="5dp"
                            android:src="@drawable/telegram" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/help"
                            android:layout_width="@dimen/toll_photo"
                            android:layout_height="@dimen/toll_photo"

                            android:layout_margin="5dp"
                            android:src="@drawable/help" />

                        <ImageView
                            android:id="@+id/drawers"
                            android:layout_width="@dimen/toll_photo"
                            android:layout_height="@dimen/toll_photo"

                            android:layout_margin="5dp"
                            android:layout_weight="3.57"
                            android:src="@drawable/bullet_list" />
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/today" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/ifemp"
                        android:layout_width="@dimen/image22"
                        android:layout_height="@dimen/image22"
                        android:layout_centerInParent="true" />

                    <ListView
                        android:id="@+id/mylist_to"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"

                        android:layout_margin="10dp"></ListView>
                </RelativeLayout>

                <ir.mirrajabi.persiancalendar.PersianCalendarView
                    android:id="@+id/persian_calendar_to"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    app:pcv_colorBackground="#fffcfc"
                    app:pcv_colorDayName="#bab6b6"
                    app:pcv_colorHoliday="#ffd506"
                    app:pcv_colorHolidaySelected="#1c1d1d"
                    app:pcv_colorNormalDay="#1d1d1d"
                    app:pcv_colorNormalDaySelected="#101010"
                    app:pcv_eventUnderlineColor="#02f0f0"
                    app:pcv_fontSize="30dp"
                    app:pcv_headersFontSize="15dp"
                    app:pcv_todayBackground="@color/bg_screen1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/visat_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/back_text"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/d3_ee_white_main_cal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cal"
                        android:layout_width="@dimen/image21"
                        android:layout_height="@dimen/image21"
                        android:layout_margin="5dp"
                        android:src="@drawable/calendar_l"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="@string/cal" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/d3_ee_white_main_goal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/vista"
                        android:layout_width="@dimen/image21"
                        android:layout_height="@dimen/image21"
                        android:layout_margin="5dp"
                        android:src="@drawable/goal_17"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="@string/goal" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/olaviyat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/d3_ee"
                    android:text="@string/olaviyat" />

                <Button
                    android:id="@+id/days_21"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/d3_ee"
                    android:text="@string/days_21" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.3"
                android:background="@color/back_text"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/today_jomle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/primary_text" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"

        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/material" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/about_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/d3_ee_white_page"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/main_font_size"
                        android:text="@string/about_app" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/imag_drawer"

                        android:src="@drawable/about_app" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/d3_ee_white_page"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/main_font_size"
                        android:text="@string/web" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/imag_drawer"
                        android:src="@drawable/web" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/elco21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/d3_ee_white_page"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/main_font_size"
                        android:text="@string/elco21" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/imag_drawer"

                        android:src="@drawable/elco21" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/d3_ee_white_page"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/main_font_size"
                        android:text="@string/call" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/imag_drawer"

                        android:src="@drawable/call" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/d3_ee_white_page"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/main_font_size"
                        android:text="@string/about_us" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/imag_drawer"
                        android:background="@drawable/d3_ee_white_page"
                        android:src="@drawable/about_us"

                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/about_app_bottom" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
