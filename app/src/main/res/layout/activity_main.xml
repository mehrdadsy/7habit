<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="ir.mehrdadseyfi.a7habit.action.ScormPlayerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tool"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/accent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tele"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/tele" />

                        <ImageView
                            android:id="@+id/insta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/telegram" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/help"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/help" />

                        <ImageView
                            android:id="@+id/drawers"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:src="@drawable/bullet_list"
                            android:layout_weight="3.57" />
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/today" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff">

                    <ImageView
                        android:id="@+id/ifemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <ListView
                        android:id="@+id/mylist_to"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"></ListView>
                </RelativeLayout>

                <ir.mirrajabi.persiancalendar.PersianCalendarView
                    android:id="@+id/persian_calendar_to"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    app:pcv_colorBackground="#fffcfc"
                    app:pcv_colorDayName="#bab6b6"
                    app:pcv_colorHoliday="#ffd506"
                    app:pcv_colorHolidaySelected="#1c1d1d"
                    app:pcv_colorNormalDay="#1d1d1d"
                    app:pcv_colorNormalDaySelected="#101010"
                    app:pcv_eventUnderlineColor="#02f0f0"
                    app:pcv_fontSize="30dp"
                    app:pcv_headersFontSize="15dp"
                    app:pcv_todayBackground="@color/bg_screen1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/visat_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/d3_ee_white"
                    >
                <ImageView
                    android:id="@+id/cal"
                    android:src="@drawable/calendar_l"
                    android:layout_width="@dimen/image21"
                    android:layout_height="@dimen/image21"


                     />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cal"
                        android:layout_gravity="center"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/d3_ee_white"
                    >
                    <ImageView
                        android:id="@+id/vista"
                        android:src="@drawable/goal_17"
                        android:layout_width="@dimen/image21"
                        android:layout_height="@dimen/image21"


                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goal"
                        android:layout_gravity="center"
                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/olaviyat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/d3_ee"
                    android:text="@string/olaviyat" />

                <Button
                    android:id="@+id/days_21"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/d3_ee"
                    android:text="@string/days_21" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.5"
                android:background="@drawable/d3_ee_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/today_jomle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"

        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@drawable/d3_ee_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:src="@drawable/logo" />

            <Button
                android:id="@+id/about_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/d3_ee_white"
                android:drawableRight="@drawable/about_app"
                android:text="@string/about_app" />

            <Button
                android:id="@+id/web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/d3_ee_white"
                android:drawableRight="@drawable/web"
                android:text="@string/web" />

            <Button
                android:id="@+id/elco21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/d3_ee_white"
                android:drawableRight="@drawable/elco21"
                android:text="@string/elco21" />

            <Button
                android:id="@+id/call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/d3_ee_white"
                android:drawableRight="@drawable/call"
                android:text="@string/call" />

            <Button
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/d3_ee_white"
                android:drawableRight="@drawable/about_us"
                android:text="@string/about_us" />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/about_app_bottom"/>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
