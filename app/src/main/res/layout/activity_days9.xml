<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="ir.mehrdadseyfi.a7habit.TwentyOneDays.PracticeTheDays.days1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:text="@string/days9"
            android:textSize="@dimen/main_font_size"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/d3_ee_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/large_font_size"
                android:text="@string/slide28" />

            <ImageView
                android:layout_width="@dimen/image21"
                android:layout_height="@dimen/image21"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/goal_in" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/slide28_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/accent"
                android:textSize="@dimen/normal_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/d3_ee_white"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/normal_font_size"
                android:text="@string/slide29" />
            <ImageView
                android:layout_width="@dimen/image21"
                android:layout_height="@dimen/image21"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/canon" />
            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/slide29_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/accent"
                android:textSize="@dimen/normal_font_size" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/d3_ee_white"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/image21"
                android:layout_height="@dimen/image21"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/conveyor" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:id="@+id/slide30"
                android:textSize="@dimen/normal_font_size"
                android:textColor="@color/accent"
                android:layout_gravity="right"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/d3_ee_white"
            android:orientation="vertical">

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="@string/day9_tr"
                android:textSize="@dimen/normal_font_size" />

            <ImageView
                android:layout_width="@dimen/image21"
                android:layout_height="@dimen/image21"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:src="@drawable/flag" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="10dp"
                android:id="@+id/resalat"
                android:hint="@string/indivisual"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <Button
            android:id="@+id/finish"
            android:text="@string/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/d3_ee" />


    </LinearLayout>
</ScrollView>


